<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaS6LopezA.viewEliminar"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ELIMINAR DATOS" FontSize="Medium" HorizontalTextAlignment="Center"/>
            <Label x:Name="lblCodigo"/>
            <Label x:Name="lblNombre"/>
            <Label x:Name="lblApellido"/>
            <Label x:Name="lblEdad"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnEliminar" Text="¿Eliminar datos?" Clicked="btnEliminar_Clicked" Grid.Row="0" Grid.Column="0"/>


            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>