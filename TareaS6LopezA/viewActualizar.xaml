<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaS6LopezA.viewActualizar"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR DATOS" FontSize="Medium" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo:" Keyboard="Numeric"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre:"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido:"/>
            <Entry x:Name="txtEdad" Placeholder="Ingrese la edad:" Keyboard="Numeric"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnGuardar" Text="Actualizar" Clicked="btnGuardar_Clicked" Grid.Row="0" Grid.Column="0"/>
                

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>